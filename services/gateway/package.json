{
  "name": "@vitana/gateway",
  "version": "1.0.0",
  "description": "VITANA API Gateway with OASIS event persistence",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "auto-logger": "tsx services/auto_logger_cli.ts start",
